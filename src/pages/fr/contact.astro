---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { useTranslations } from '../../i18n/ui';

const locale = 'fr';
const t = useTranslations(locale);
---

<BaseLayout
  title="Contact - CIRIV 2026"
  description="Contactez l'équipe organisatrice de la conférence CIRIV 2026 pour toute question ou information"
  locale={locale}
>
  <Header locale={locale} currentPath={Astro.url.pathname} />
  
  <main class="min-h-screen bg-gradient-to-br from-slate-50 to-teal-50 dark:from-surface-dark dark:to-slate-800 py-12">
    <div class="container mx-auto px-4">
      <!-- Header -->
      <div class="text-center mb-16">
        <h1 class="text-4xl lg:text-5xl font-bold text-slate-900 dark:text-white mb-4">
          Contactez-nous
        </h1>
        <p class="text-xl text-slate-600 dark:text-slate-300 max-w-3xl mx-auto">
          Notre équipe est à votre disposition pour répondre à toutes vos questions concernant CIRIV 2026
        </p>
      </div>

      <div class="max-w-6xl mx-auto">
        <div class="grid lg:grid-cols-3 gap-8">
          <!-- Contact Information -->
          <div class="lg:col-span-1">
            <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-xl p-8 h-full">
              <h2 class="text-2xl font-bold text-slate-900 dark:text-white mb-8">
                Informations de contact
              </h2>
              
              <!-- Email -->
              <div class="flex items-start gap-4 mb-8">
                <div class="w-12 h-12 bg-brand-primary/10 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-brand-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-slate-900 dark:text-white mb-1">Email</h3>
                  <a 
                    href="mailto:info@ciriv.org" 
                    class="text-brand-primary hover:text-brand-primaryDark transition-colors"
                  >
                    info@ciriv.org
                  </a>
                </div>
              </div>

              <!-- Phone -->
              <div class="flex items-start gap-4 mb-8">
                <div class="w-12 h-12 bg-brand-primary/10 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-brand-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-slate-900 dark:text-white mb-1">Téléphone</h3>
                  <a 
                    href="tel:+212522704671" 
                    class="text-brand-primary hover:text-brand-primaryDark transition-colors"
                  >
                    +212 696 907 947
                  </a>
                </div>
              </div>

              <!-- Address -->
              <div class="flex items-start gap-4 mb-8">
                <div class="w-12 h-12 bg-brand-primary/10 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-brand-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-slate-900 dark:text-white mb-1">Adresse</h3>
                  <p class="text-slate-600 dark:text-slate-300">
                    Faculté des Sciences Ben M'Sik<br />
                    Université Hassan II<br />
                    Casablanca, Maroc
                  </p>
                  <a
                    href="https://maps.google.com/?q=Faculté+des+Sciences+Ben+M'Sik+Casablanca"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-1 mt-2 text-brand-primary hover:text-brand-primaryDark transition-colors text-sm"
                  >
                    Voir sur la carte
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                    </svg>
                  </a>
                </div>
              </div>

              <!-- Social Links -->
              <div>
                <h3 class="font-semibold text-slate-900 dark:text-white mb-4">Suivez-nous</h3>
                <div class="flex gap-4">
                  <a
                    href="https://www.linkedin.com/company/ciriv.congres"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="w-10 h-10 bg-blue-700 text-white rounded-lg flex items-center justify-center hover:bg-blue-800 transition-colors"
                    aria-label="LinkedIn"
                  >
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.338 16.338H13.67V12.16c0-.995-.017-2.277-1.387-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248H8.014v-8.59h2.559v1.174h.037c.356-.675 1.227-1.387 2.526-1.387 2.703 0 3.203 1.778 3.203 4.092v4.711zM5.005 6.575a1.548 1.548 0 11-.003-3.096 1.548 1.548 0 01.003 3.096zm-1.337 9.763H6.34v-8.59H3.667v8.59zM17.668 1H2.328C1.595 1 1 1.581 1 2.298v15.403C1 18.418 1.595 19 2.328 19h15.34c.734 0 1.332-.582 1.332-1.299V2.298C19 1.581 18.402 1 17.668 1z" clip-rule="evenodd"></path>
                    </svg>
                  </a>
                  <a
                    href="https://www.instagram.com/ciriv.congres"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="w-10 h-10 bg-gradient-to-r from-purple-500 to-pink-500 text-white rounded-lg flex items-center justify-center hover:from-purple-600 hover:to-pink-600 transition-colors"
                    aria-label="Instagram"
                  >
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 0C7.284 0 6.944.012 5.877.06 2.246.227.227 2.246.06 5.877.012 6.944 0 7.284 0 10s.012 3.056.06 4.123c.167 3.631 2.186 5.65 5.817 5.817C6.944 19.988 7.284 20 10 20s3.056-.012 4.123-.06c3.631-.167 5.65-2.186 5.817-5.817C19.988 13.056 20 12.716 20 10s-.012-3.056-.06-4.123C19.773 2.246 17.754.227 14.123.06 13.056.012 12.716 0 10 0zm0 1.802c2.67 0 2.987.01 4.042.059 2.71.123 3.975 1.409 4.099 4.099.048 1.054.057 1.37.057 4.04 0 2.67-.009 2.986-.057 4.04-.124 2.69-1.387 3.975-4.1 4.099-1.054.048-1.37.058-4.041.058-2.67 0-2.987-.01-4.04-.058-2.717-.124-3.976-1.416-4.1-4.1-.048-1.054-.058-1.37-.058-4.041 0-2.67.01-2.986.058-4.04.124-2.69 1.387-3.976 4.1-4.1 1.054-.048 1.37-.058 4.04-.058zM10 4.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" clip-rule="evenodd"></path>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          </div>

          <!-- Contact Form -->
          <div class="lg:col-span-2">
            <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-xl p-8">
              <h2 class="text-2xl font-bold text-slate-900 dark:text-white mb-8">
                Envoyez-nous un message
              </h2>

              <form class="space-y-6" action="#" method="POST">
                <div class="grid md:grid-cols-2 gap-6">
                  <!-- Name -->
                  <div>
                    <label for="contact-name" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                      Nom complet <span class="text-red-500">*</span>
                    </label>
                    <input
                      type="text"
                      id="contact-name"
                      name="name"
                      required
                      class="w-full px-4 py-3 border border-slate-300 dark:border-slate-600 rounded-lg focus:ring-2 focus:ring-brand-accent focus:border-transparent dark:bg-slate-700 dark:text-white transition-colors"
                      placeholder="Votre nom complet"
                    />
                  </div>

                  <!-- Email -->
                  <div>
                    <label for="contact-email" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                      Email <span class="text-red-500">*</span>
                    </label>
                    <input
                      type="email"
                      id="contact-email"
                      name="email"
                      required
                      class="w-full px-4 py-3 border border-slate-300 dark:border-slate-600 rounded-lg focus:ring-2 focus:ring-brand-accent focus:border-transparent dark:bg-slate-700 dark:text-white transition-colors"
                      placeholder="votre@email.com"
                    />
                  </div>
                </div>

                <!-- Subject -->
                <div>
                  <label for="contact-subject" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                    Sujet <span class="text-red-500">*</span>
                  </label>
                  <select
                    id="contact-subject"
                    name="subject"
                    required
                    class="w-full px-4 py-3 border border-slate-300 dark:border-slate-600 rounded-lg focus:ring-2 focus:ring-brand-accent focus:border-transparent dark:bg-slate-700 dark:text-white transition-colors"
                  >
                    <option value="">Sélectionnez un sujet</option>
                    <option value="inscription">Questions sur l'inscription</option>
                    <option value="programme">Informations sur le programme</option>
                    <option value="logistique">Logistique et hébergement</option>
                    <option value="partenariat">Opportunités de partenariat</option>
                    <option value="presse">Demandes de presse</option>
                    <option value="autre">Autre</option>
                  </select>
                </div>

                <!-- Message -->
                <div>
                  <label for="contact-message" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                    Message <span class="text-red-500">*</span>
                  </label>
                  <textarea
                    id="contact-message"
                    name="message"
                    rows="6"
                    required
                    class="w-full px-4 py-3 border border-slate-300 dark:border-slate-600 rounded-lg focus:ring-2 focus:ring-brand-accent focus:border-transparent dark:bg-slate-700 dark:text-white transition-colors resize-vertical"
                    placeholder="Votre message..."
                  ></textarea>
                </div>

                <!-- Submit Button -->
                <button
                  type="submit"
                  class="w-full px-6 py-4 bg-brand-primary hover:bg-brand-primaryDark text-white font-semibold rounded-lg transition-all duration-300 hover:scale-105 hover:shadow-lg hover:shadow-brand-primary/25 focus:outline-none focus:ring-2 focus:ring-brand-accent focus:ring-offset-2 dark:focus:ring-offset-slate-800"
                >
                  Envoyer le message
                </button>

                <p class="text-sm text-slate-500 dark:text-slate-400 text-center">
                  <span class="text-red-500">*</span> Champs requis
                </p>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
  
  <Footer locale={locale} />
</BaseLayout>