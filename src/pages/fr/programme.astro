---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { useTranslations } from '../../i18n/ui';
import { link } from '../../utils/paths';

const locale = 'fr';
const t = useTranslations(locale);

const day1 = [
  { time: '09h00 – 10h00', session: 'Accueil des participants et inscription', speakers: 'Équipe d\'organisation', type: 'event' },
  { time: '10h00 – 11h00', session: 'Session inaugurale / Officiels', speakers: 'Pr Fassi Fihri (Association One Health Maroc), Ministre de l\'Agriculture, Directeur de l\'IAV, Vice-Président UH2, Doyen de la FS Ben M\'Sik, Président AMARINOVA & Chair CIRIV\'26', type: 'plenary' },
  { time: '11h00 – 11h45', session: 'Conférence plénière d\'ouverture\nOne Health 2030 : Vers une gouvernance intégrée de la santé humaine, animale et environnementale', speakers: 'Conférencière : Pr Fassi Fihri\nModération : Pr Tanane', type: 'plenary' },
  { time: '11h45 – 12h15', session: 'Pause-café', speakers: '—', type: 'break' },
  { time: '12h15 – 13h00', session: 'SESSION 1 : Interfaces biologiques, émergences sanitaires et dynamiques de transmission\nBiosécurité et One Health : pilier de la prévention, de la résilience et de la gouvernance des risques biologiques', speakers: 'Conférencière : Pr Belkadi\nModération : Pr Medraoui & Pr Noury', type: 'session' },
  { time: '13h00 – 14h00', session: 'Présentations orales / Session 1', speakers: 'Pr Noury & Pr Medraoui', type: 'oral' },
  { time: '14h00 – 14h30', session: 'Pause déjeuner', speakers: '—', type: 'break' },
  { time: '14h30 – 15h15', session: 'SESSION 2 : Systèmes & sécurité alimentaire\nConférence plénière', speakers: 'Conférencier : Pr Sara Remón\nModération : Pr Rouas & Dr Moujabbir', type: 'session' },
  { time: '15h15 – 16h15', session: 'Présentations orales / Session 2', speakers: 'Pr Rouas & Dr Moujabbir', type: 'oral' },
  { time: '16h15 – 16h30', session: 'Pause-café', speakers: '—', type: 'break' },
  { time: '16h30 – 17h30', session: 'Workshop 1', speakers: 'AMBS', type: 'workshop' },
  { time: '17h30 – 18h30', session: 'Workshop 2', speakers: 'Pr Kasraoui Aziz & Dr El Moussati', type: 'workshop' },
];

const day2 = [
  { time: '09h00 – 09h45', session: 'SESSION 3 : Environnement, expositions et impacts sur la santé globale\nDu stress écologique aux perturbations reproductives : pollutions, changements environnementaux et santé globale', speakers: 'Conférencière : Pr Julie Garnier\nModération : Pr Madkour & Pr Laakili', type: 'session' },
  { time: '09h45 – 10h45', session: 'Présentations orales / Session 3', speakers: 'Modération : Pr Madkour & Pr Laakili', type: 'oral' },
  { time: '10h45 – 11h00', session: 'Pause-café', speakers: '—', type: 'break' },
  { time: '11h00 – 11h45', session: 'SESSION 4 : Chimie, biosécurité et innovations analytiques pour le One Health\nConférence plénière', speakers: 'Conférencier : Pr Michoux\nModération : Pr Tanane & Dr El Moussati', type: 'session' },
  { time: '11h45 – 12h45', session: 'Présentations orales / Session 4', speakers: 'Modération : Pr Tanane & Dr El Moussati', type: 'oral' },
  { time: '12h45 – 13h30', session: 'SESSION 5 : Technologies émergentes, données et surveillance intelligente\nDu capteur à la décision : technologies et IA pour le One Health', speakers: 'Conférencier : Pr Jacob Zinstag\nModération : Pr Noury & Dr El Moussati', type: 'session' },
  { time: '13h30 – 14h30', session: 'Présentations orales / Session 5', speakers: 'Modération : Pr Noury & Dr El Moussati', type: 'oral' },
  { time: '14h30 – 15h00', session: 'Pause déjeuner', speakers: '—', type: 'break' },
  { time: '15h00 – 15h45', session: 'SESSION 6 : Bien-être, durabilité et résilience des systèmes vivants\nDurabilité, bien-être et résilience dans l\'approche One Health', speakers: 'Conférencier : Pr Giovanni Ghielmetti\nModération : Pr Mkamel & Pr Manoussi', type: 'session' },
  { time: '15h45 – 16h45', session: 'Présentations orales / Session 6', speakers: 'Pr Mkamel & Pr Manoussi', type: 'oral' },
  { time: '16h45 – 17h00', session: 'Pause-café', speakers: '—', type: 'break' },
  { time: '17h00 – 18h00', session: 'Workshop 3', speakers: 'Pr Chgouri & Pr Mkamel', type: 'workshop' },
  { time: '18h00 – 19h00', session: 'Workshop 4', speakers: 'Pr Madkour & Pr Noury', type: 'workshop' },
  { time: '19h00 – 19h30', session: 'Session de clôture', speakers: 'Comité d\'organisation', type: 'plenary' },
];

function getRowStyle(type: string) {
  switch(type) {
    case 'break': return 'bg-amber-50 dark:bg-amber-900/20 text-amber-800 dark:text-amber-200';
    case 'plenary': return 'bg-brand-primary/10 dark:bg-brand-primary/20 text-brand-primary dark:text-brand-accent font-medium';
    case 'session': return 'bg-teal-50 dark:bg-teal-900/20';
    case 'workshop': return 'bg-purple-50 dark:bg-purple-900/20';
    case 'oral': return 'bg-slate-50 dark:bg-slate-700/30';
    default: return '';
  }
}
---

<BaseLayout
  title="Programme Scientifique - CIRIV'26"
  description="Découvrez le programme complet du congrès CIRIV'26 - 7 et 8 avril 2026"
  locale={locale}
>
  <Header locale={locale} currentPath={Astro.url.pathname} />
  
  <main class="min-h-screen bg-gradient-to-br from-slate-50 to-teal-50 dark:from-surface-dark dark:to-slate-800 py-12">
    <div class="container mx-auto px-4">
      <!-- Header -->
      <div class="text-center mb-12">
        <span class="inline-block px-4 py-2 bg-brand-primary/10 dark:bg-brand-primary/20 text-brand-primary dark:text-brand-accent rounded-full text-sm font-medium mb-4">
          7 – 8 Avril 2026
        </span>
        <h1 class="text-4xl lg:text-5xl font-bold text-slate-900 dark:text-white mb-4">
          Programme Scientifique
        </h1>
        <p class="text-xl text-slate-600 dark:text-slate-300 max-w-3xl mx-auto">
          CIRIV'26 - Congrès International de la Recherche, d'Innovation et Valorisation
        </p>
      </div>

      <!-- Day 1 -->
      <div class="mb-12">
        <div class="flex items-center gap-4 mb-6">
          <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-brand-primary to-brand-accent flex items-center justify-center text-white font-bold text-xl shadow-lg">
            J1
          </div>
          <div>
            <h2 class="text-2xl font-bold text-slate-900 dark:text-white">Jour 1</h2>
            <p class="text-slate-600 dark:text-slate-400">Mardi 7 Avril 2026</p>
          </div>
        </div>
        
        <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-xl overflow-hidden">
          <div class="overflow-x-auto">
            <table class="w-full">
              <thead class="bg-slate-100 dark:bg-slate-700">
                <tr>
                  <th class="px-6 py-4 text-left text-sm font-semibold text-slate-700 dark:text-slate-200 w-36">Horaire</th>
                  <th class="px-6 py-4 text-left text-sm font-semibold text-slate-700 dark:text-slate-200">Session</th>
                  <th class="px-6 py-4 text-left text-sm font-semibold text-slate-700 dark:text-slate-200 w-72">Responsable / Intervenants</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-slate-200 dark:divide-slate-700">
                {day1.map((item) => (
                  <tr class={`${getRowStyle(item.type)} transition-colors`}>
                    <td class="px-6 py-4 text-sm font-medium text-slate-900 dark:text-slate-100 whitespace-nowrap">{item.time}</td>
                    <td class="px-6 py-4 text-sm text-slate-700 dark:text-slate-300 whitespace-pre-line">{item.session}</td>
                    <td class="px-6 py-4 text-sm text-slate-600 dark:text-slate-400 whitespace-pre-line">{item.speakers}</td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- Day 2 -->
      <div class="mb-12">
        <div class="flex items-center gap-4 mb-6">
          <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-brand-accent to-teal-600 flex items-center justify-center text-white font-bold text-xl shadow-lg">
            J2
          </div>
          <div>
            <h2 class="text-2xl font-bold text-slate-900 dark:text-white">Jour 2</h2>
            <p class="text-slate-600 dark:text-slate-400">Mercredi 8 Avril 2026</p>
          </div>
        </div>
        
        <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-xl overflow-hidden">
          <div class="overflow-x-auto">
            <table class="w-full">
              <thead class="bg-slate-100 dark:bg-slate-700">
                <tr>
                  <th class="px-6 py-4 text-left text-sm font-semibold text-slate-700 dark:text-slate-200 w-36">Horaire</th>
                  <th class="px-6 py-4 text-left text-sm font-semibold text-slate-700 dark:text-slate-200">Session</th>
                  <th class="px-6 py-4 text-left text-sm font-semibold text-slate-700 dark:text-slate-200 w-72">Responsable / Intervenants</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-slate-200 dark:divide-slate-700">
                {day2.map((item) => (
                  <tr class={`${getRowStyle(item.type)} transition-colors`}>
                    <td class="px-6 py-4 text-sm font-medium text-slate-900 dark:text-slate-100 whitespace-nowrap">{item.time}</td>
                    <td class="px-6 py-4 text-sm text-slate-700 dark:text-slate-300 whitespace-pre-line">{item.session}</td>
                    <td class="px-6 py-4 text-sm text-slate-600 dark:text-slate-400 whitespace-pre-line">{item.speakers}</td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- Legend -->
      <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-xl p-6 mb-12">
        <h3 class="text-lg font-semibold text-slate-900 dark:text-white mb-4">Légende</h3>
        <div class="flex flex-wrap gap-4">
          <div class="flex items-center gap-2">
            <span class="w-4 h-4 rounded bg-brand-primary/20"></span>
            <span class="text-sm text-slate-600 dark:text-slate-400">Session plénière / Cérémonie</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="w-4 h-4 rounded bg-teal-100 dark:bg-teal-900/40"></span>
            <span class="text-sm text-slate-600 dark:text-slate-400">Conférence thématique</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="w-4 h-4 rounded bg-slate-100 dark:bg-slate-700"></span>
            <span class="text-sm text-slate-600 dark:text-slate-400">Présentations orales</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="w-4 h-4 rounded bg-purple-100 dark:bg-purple-900/40"></span>
            <span class="text-sm text-slate-600 dark:text-slate-400">Workshop</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="w-4 h-4 rounded bg-amber-100 dark:bg-amber-900/40"></span>
            <span class="text-sm text-slate-600 dark:text-slate-400">Pause</span>
          </div>
        </div>
      </div>

      <!-- CTA Section -->
      <div class="text-center">
        <div class="bg-gradient-to-r from-brand-primary to-brand-accent rounded-2xl p-8 text-white">
          <h2 class="text-2xl font-bold mb-4">
            Prêt à participer ?
          </h2>
          <p class="text-lg mb-6 opacity-90">
            Inscrivez-vous dès maintenant pour réserver votre place au CIRIV'26
          </p>
          <a
            href={link({ locale, slug: 'inscription' })}
            class="inline-flex items-center gap-3 px-8 py-4 bg-white text-brand-primary font-semibold rounded-xl transition-all duration-300 hover:scale-105 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-brand-primary"
          >
            S'inscrire maintenant
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </main>
  
  <Footer locale={locale} />
</BaseLayout>
