---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { useTranslations } from '../../i18n/ui';

const locale = 'ar';
const t = useTranslations(locale);
---

<BaseLayout
  title="التسجيل - CIRIV 2026"
  description="سجّل في المؤتمر الدولي للبحث والابتكار والتثمين CIRIV 2026"
  locale={locale}
>
  <Header locale={locale} currentPath={Astro.url.pathname} />
  
  <main dir="rtl" class="min-h-screen bg-gradient-to-br from-slate-50 to-teal-50 dark:from-surface-dark dark:to-slate-800 py-12">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <!-- رسائل التنبيه -->
        <div id="alert-container" class="mb-6 hidden">
          <div id="alert-content" class="rounded-lg p-4 flex items-start space-x-3 transform transition-all duration-500 ease-in-out opacity-0 translate-y-[-20px]">
            <div id="alert-icon" class="flex-shrink-0 text-2xl"></div>
            <div class="flex-1">
              <p id="alert-message" class="font-medium"></p>
            </div>
            <button id="alert-close" class="flex-shrink-0 text-white hover:opacity-80 transition-opacity">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
              </svg>
            </button>
          </div>
        </div>

        <!-- العنوان -->
        <div class="text-center mb-12">
          <h1 class="text-4xl font-bold text-slate-900 dark:text-white mb-4">
            التسجيل في CIRIV 2026
          </h1>
          <p class="text-xl text-slate-600 dark:text-slate-300">
            شارك في أول مؤتمر دولي للبحث والابتكار والتثمين بالمغرب
          </p>
        </div>

        <!-- شريط التقدم -->
        <div class="mb-8">
          <div class="flex items-center justify-center space-x-4">
            <div class="flex items-center">
              <div id="step1-indicator" class="w-8 h-8 bg-brand-primary text-white rounded-full flex items-center justify-center font-semibold transition-all duration-300">
                1
              </div>
              <span class="ml-2 text-sm font-medium text-slate-700 dark:text-slate-300">المعلومات الشخصية</span>
            </div>
            <div class="w-16 h-0.5 bg-slate-300 dark:bg-slate-600"></div>
            <div class="flex items-center">
              <div id="step2-indicator" class="w-8 h-8 bg-slate-300 dark:bg-slate-600 text-slate-500 rounded-full flex items-center justify-center font-semibold transition-all duration-300">
                2
              </div>
              <span class="ml-2 text-sm font-medium text-slate-500">نوع المشاركة</span>
            </div>
          </div>
        </div>

        <!-- استمارة التسجيل -->
        <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-xl p-8">
          <form id="registration-form" class="space-y-6">
            
            <!-- الخطوة 1 -->
            <div id="step1" class="space-y-6">
              <h2 class="text-2xl font-semibold text-slate-900 dark:text-white mb-6">
                الخطوة 1: المعلومات الشخصية
              </h2>

              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label for="nom" class="block text-sm font-medium mb-2">
                    الاسم العائلي <span class="text-red-500">*</span>
                  </label>
                  <input type="text" id="nom" name="nom" required placeholder="اكتب اسمك العائلي" class="w-full px-4 py-3 border ..." />
                  <p class="text-red-500 text-xs mt-1 hidden error-message">هذا الحقل إلزامي</p>
                </div>
                <div>
                  <label for="prenom" class="block text-sm font-medium mb-2">
                    الاسم الشخصي <span class="text-red-500">*</span>
                  </label>
                  <input type="text" id="prenom" name="prenom" required placeholder="اكتب اسمك الشخصي" class="w-full px-4 py-3 border ..." />
                  <p class="text-red-500 text-xs mt-1 hidden error-message">هذا الحقل إلزامي</p>
                </div>
              </div>

              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label for="civilite" class="block text-sm font-medium mb-2">
                    اللقب / الجنس
                  </label>
                  <select id="civilite" name="civilite" class="w-full px-4 py-3 border ...">
                    <option value="">اختر</option>
                    <option value="Mr.">السيد</option>
                    <option value="Ms.">السيدة</option>
                  </select>
                </div>
                <div>
                  <label for="email" class="block text-sm font-medium mb-2">
                    البريد الإلكتروني <span class="text-red-500">*</span>
                  </label>
                  <input type="email" id="email" name="email" required placeholder="name@example.com" class="w-full px-4 py-3 border ..." />
                  <p class="text-red-500 text-xs mt-1 hidden error-message">المرجو إدخال بريد إلكتروني صحيح</p>
                </div>
              </div>

              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label for="telephone" class="block text-sm font-medium mb-2">
                    الهاتف
                  </label>
                  <input type="tel" id="telephone" name="telephone" placeholder="+212 6XX-XXXXXX" class="w-full px-4 py-3 border ..." />
                </div>
                <div>
                  <label for="etablissement" class="block text-sm font-medium mb-2">
                    المؤسسة <span class="text-red-500">*</span>
                  </label>
                  <input type="text" id="etablissement" name="etablissement" required placeholder="اسم مؤسستك" class="w-full px-4 py-3 border ..." />
                  <p class="text-red-500 text-xs mt-1 hidden error-message">هذا الحقل إلزامي</p>
                </div>
              </div>

              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label for="departement" class="block text-sm font-medium mb-2">
                    المختبر / القسم
                  </label>
                  <input type="text" id="departement" name="departement" placeholder="مختبر أو قسم" class="w-full px-4 py-3 border ..." />
                </div>
                <div>
                  <label for="ville" class="block text-sm font-medium mb-2">
                    المدينة و البلد <span class="text-red-500">*</span>
                  </label>
                  <input type="text" id="ville" name="ville" required placeholder="المدينة، البلد" class="w-full px-4 py-3 border ..." />
                  <p class="text-red-500 text-xs mt-1 hidden error-message">هذا الحقل إلزامي</p>
                </div>
              </div>

              <div>
                <label for="statut" class="block text-sm font-medium mb-2">
                  الوضعية <span class="text-red-500">*</span>
                </label>
                <select id="statut" name="statut" required class="w-full px-4 py-3 border ...">
                  <option value="">اختر وضعيتك</option>
                  <option value="Student">طالب</option>
                  <option value="PhD Student">طالب دكتوراه</option>
                  <option value="Lecturer-Researcher">أستاذ باحث</option>
                  <option value="Researcher">باحث</option>
                  <option value="Professional">مهني</option>
                </select>
                <p class="text-red-500 text-xs mt-1 hidden error-message">المرجو اختيار الوضعية</p>
              </div>

              <div class="flex justify-end">
                <button type="button" id="next-step" class="px-8 py-3 bg-brand-primary ...">
                  التالي →
                </button>
              </div>
            </div>

            <!-- الخطوة 2 -->
            <div id="step2" class="space-y-6 hidden">
              <h2 class="text-2xl font-semibold mb-6">الخطوة 2: نوع المشاركة</h2>

              <div>
                <label class="block text-sm font-medium mb-4">
                  كيف ترغب بالمشاركة؟ <span class="text-red-500">*</span>
                </label>
                <div class="space-y-3">
                  <label class="flex items-center p-4 border ...">
                    <input type="radio" name="typeParticipation" value="Participant" class="w-4 h-4 ..." />
                    <div class="ml-3">
                      <div class="text-sm font-medium">مشارك</div>
                      <div class="text-sm text-slate-500">حضور المؤتمرات والمناقشات</div>
                    </div>
                  </label>
                  <label class="flex items-center p-4 border ...">
                    <input type="radio" name="typeParticipation" value="Presenter" class="w-4 h-4 ..." />
                    <div class="ml-3">
                      <div class="text-sm font-medium">مقدّم</div>
                      <div class="text-sm text-slate-500">تقديم مداخلة (شفوية أو ملصق)</div>
                    </div>
                  </label>
                </div>
                <p class="text-red-500 text-xs mt-1 hidden error-message">المرجو اختيار نوع المشاركة</p>
              </div>

              <div id="presenter-fields" class="space-y-6 hidden">
                <div class="border-t pt-6">
                  <h3 class="text-lg font-medium mb-4">معلومات حول مداخلتك</h3>

                  <div class="mb-4">
                    <label for="titreCommunication" class="block text-sm font-medium mb-2">
                      عنوان المداخلة <span class="text-red-500">*</span>
                    </label>
                    <input type="text" id="titreCommunication" name="titreCommunication" placeholder="اكتب عنوان المداخلة" class="w-full px-4 py-3 border ..." />
                    <p class="text-red-500 text-xs mt-1 hidden error-message">هذا الحقل إلزامي</p>
                  </div>

                  <div class="grid md:grid-cols-2 gap-6">
                    <div>
                      <label for="auteurs" class="block text-sm font-medium mb-2">
                        المؤلفون <span class="text-red-500">*</span>
                      </label>
                      <input type="text" id="auteurs" name="auteurs" placeholder="مؤلف 1، مؤلف 2 ..." class="w-full px-4 py-3 border ..." />
                      <p class="text-red-500 text-xs mt-1 hidden error-message">هذا الحقل إلزامي</p>
                    </div>
                    <div>
                      <label for="auteurCorrespondant" class="block text-sm font-medium mb-2">
                        المؤلف المراسل <span class="text-red-500">*</span>
                      </label>
                      <input type="text" id="auteurCorrespondant" name="auteurCorrespondant" placeholder="اسم المؤلف المراسل" class="w-full px-4 py-3 border ..." />
                      <p class="text-red-500 text-xs mt-1 hidden error-message">هذا الحقل إلزامي</p>
                    </div>
                  </div>

                  <div class="grid md:grid-cols-2 gap-6">
                    <div>
                      <label for="thematique" class="block text-sm font-medium mb-2">
                        المحور <span class="text-red-500">*</span>
                      </label>
                      <select id="thematique" name="thematique" class="w-full px-4 py-3 border ...">
                        <option value="">اختر المحور</option>
                        <option value="Human Health">الصحة البشرية</option>
                        <option value="Animal Health">صحة الحيوان</option>
                        <option value="Environment">البيئة</option>
                        <option value="Interdisciplinary">متعدد التخصصات</option>
                      </select>
                      <p class="text-red-500 text-xs mt-1 hidden error-message">المرجو اختيار المحور</p>
                    </div>
                    <div>
                      <label for="choixCommunication" class="block text-sm font-medium mb-2">
                        نوع المداخلة <span class="text-red-500">*</span>
                      </label>
                      <select id="choixCommunication" name="choixCommunication" class="w-full px-4 py-3 border ...">
                        <option value="">اختر النوع</option>
                        <option value="Oral Communication">مداخلة شفهية</option>
                        <option value="Poster Communication">مداخلة بملصق</option>
                      </select>
                      <p class="text-red-500 text-xs mt-1 hidden error-message">المرجو اختيار النوع</p>
                    </div>
                  </div>

                  <div>
                    <label for="resumeFileLink" class="block text-sm font-medium mb-2">
                      الملخص (رابط الملف) <span class="text-red-500">*</span>
                    </label>
                    <input type="url" id="resumeFileLink" name="resumeFileLink" placeholder="https://drive.google.com/file/..." class="w-full px-4 py-3 border ..." />
                    <p class="mt-2 text-sm text-slate-500">حمّل الملخص على Google Drive أو Dropbox أو OneDrive ثم ضع الرابط هنا. الصيغ المقبولة: PDF, DOC, DOCX</p>
                    <p class="text-red-500 text-xs mt-1 hidden error-message">المرجو إدخال رابط</p>
                  </div>
                </div>
              </div>

              <div class="flex justify-between pt-6">
                <button type="button" id="prev-step" class="px-8 py-3 border ...">← السابق</button>
                <button type="submit" id="submit-form" class="px-8 py-3 bg-green-600 ...">
                  <span id="submit-text">إرسال التسجيل</span>
                  <span id="submit-loader" class="hidden">جاري الإرسال...</span>
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </main>
  
  <Footer locale={locale} />
</BaseLayout>

<script>
  const messages = {
    sending: '⏳ جاري الإرسال...',
    success: 'تم تسجيلك بنجاح.',
    error: ' حدث خطأ أثناء الإرسال. المرجو إعادة المحاولة.',
    networkError: ' خطأ في الشبكة. تحقق من الاتصال.',
    serverError: ' خطأ في الخادم. حاول لاحقًا.',
    requiredField: 'هذا الحقل إلزامي',
    validEmail: 'المرجو إدخال بريد صحيح',
    selectStatus: 'المرجو اختيار الوضعية',
    selectParticipation: 'المرجو اختيار نوع المشاركة',
    selectTheme: 'المرجو اختيار المحور',
    selectType: 'المرجو اختيار النوع',
    uploadLink: 'المرجو إدخال رابط الملف'
  };
</script>
