---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { useTranslations } from '../../i18n/ui';
import { link } from '../../utils/paths';
import sponsors from '../../content/sponsors.json';

const locale = 'fr';
const t = useTranslations(locale);
const baseUrl = import.meta.env.BASE_URL || '/';

// Type mapping for translations
const typeLabels: Record<string, string> = {
  'Institutional': 'Partenaire Institutionnel',
  'Academic': 'Partenaire Académique',
  'Partner': 'Partenaire'
};

function getTypeLabel(type: string): string {
  return typeLabels[type] || type;
}

const hasSponsors = sponsors && sponsors.length > 0;
---

<BaseLayout
  title="Partenaires & Sponsors - CIRIV 2026"
  description="Découvrez les partenaires institutionnels et académiques du Congrès International de Recherche, Innovation et Valorisation CIRIV 2026"
  locale={locale}
>
  <Header locale={locale} currentPath={Astro.url.pathname} />
  
  <main class="min-h-screen bg-gradient-to-br from-slate-50 to-teal-50 dark:from-surface-dark dark:to-slate-800 py-12">
    <div class="container mx-auto px-4">
      <!-- Page Header -->
      <div class="text-center mb-12">
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-brand-primary dark:text-brand-accent mb-4">
          {t('sponsors.title')}
        </h1>
        <div class="w-24 h-1 bg-brand-primary mx-auto rounded-full mb-6"></div>
        <p class="text-lg md:text-xl text-slate-600 dark:text-slate-300 max-w-3xl mx-auto">
          {t('sponsors.description')}
        </p>
      </div>

      {hasSponsors ? (
        <!-- Sponsors Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8 max-w-6xl mx-auto">
          {sponsors.map((sponsor: { name: string; type: string; logo: string | null; url: string | null }) => (
            <article 
              class="sponsor-card group bg-white dark:bg-slate-800 rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 border border-slate-200 dark:border-slate-700 hover:border-brand-accent dark:hover:border-brand-accent hover:-translate-y-1"
              role="article"
              aria-label={sponsor.name}
            >
              <!-- Logo -->
              <div class="w-full h-32 mb-6 flex items-center justify-center bg-slate-100 dark:bg-slate-700 rounded-xl overflow-hidden">
                {sponsor.logo ? (
                  <img 
                    src={`${baseUrl}${sponsor.logo}`}
                    alt={`Logo ${sponsor.name}`}
                    class="max-h-24 max-w-full object-contain"
                    loading="lazy"
                  />
                ) : (
                  <div class="text-slate-400 dark:text-slate-500">
                    <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                    </svg>
                  </div>
                )}
              </div>

              <!-- Sponsor Info -->
              <div class="space-y-3 text-center">
                <span class="inline-block px-4 py-1.5 text-sm font-medium rounded-full bg-brand-primary/10 text-brand-primary dark:bg-brand-accent/10 dark:text-brand-accent">
                  {getTypeLabel(sponsor.type)}
                </span>
                <h2 class="text-xl font-semibold text-slate-800 dark:text-white group-hover:text-brand-primary dark:group-hover:text-brand-accent transition-colors">
                  {sponsor.name}
                </h2>
                {sponsor.url && (
                  <a 
                    href={sponsor.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 text-sm text-brand-primary dark:text-brand-accent hover:underline"
                    aria-label={`En savoir plus sur ${sponsor.name}`}
                  >
                    {t('sponsors.learnMore')}
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                    </svg>
                  </a>
                )}
              </div>
            </article>
          ))}
        </div>
      ) : (
        <!-- Empty State -->
        <div class="text-center py-16">
          <div class="max-w-lg mx-auto bg-white dark:bg-slate-800 rounded-2xl p-8 shadow-lg border border-slate-200 dark:border-slate-700">
            <div class="w-24 h-24 mx-auto mb-6 bg-slate-100 dark:bg-slate-700 rounded-full flex items-center justify-center">
              <svg class="w-12 h-12 text-slate-400 dark:text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <h2 class="text-2xl font-semibold text-slate-800 dark:text-white mb-4">
              {t('sponsors.title')}
            </h2>
            <p class="text-lg text-slate-500 dark:text-slate-400 mb-6">
              {t('sponsors.comingSoon')}
            </p>
            <p class="text-sm text-slate-400 dark:text-slate-500">
              Pour toute demande de partenariat, contactez-nous à <a href="mailto:info@ciriv.org" class="text-brand-primary dark:text-brand-accent hover:underline">info@ciriv.org</a>
            </p>
          </div>
        </div>
      )}
    </div>
  </main>

  <Footer locale={locale} />
</BaseLayout>
