  { time: '11:00 ‚Äì 11:45', session: 'Opening Plenary Conference\nOne Health 2030: Towards Integrated Governance', speakers: 'Speaker: Pr Fassi Fihri\nModerator: Pr Tanane', type: 'plenary' },
  { time: '11:45 ‚Äì 12:15', session: 'Coffee Break', speakers: '', type: 'break' },
  { time: '12:15 ‚Äì 13:00', session: 'SESSION 1: Biological Interfaces & Health Emergencies\nBiosecurity and One Health', speakers: 'Speaker: Pr Belkadi\nModerators: Pr Medraoui & Pr Noury', type: 'session' },
  { time: '13:00 ‚Äì 14:00', session: 'Oral Presentations / Session 1', speakers: 'Pr Noury & Pr Medraoui', type: 'oral' },
  { time: '14:00 ‚Äì 14:30', session: 'Lunch Break', speakers: '', type: 'break' },
  { time: '14:30 ‚Äì 15:15', session: 'SESSION 2: Food Systems & Security', speakers: 'Speaker: Pr Sara Rem√≥n\nModerators: Pr Rouas & Dr Moujabbir', type: 'session' },
  { time: '15:15 ‚Äì 16:15', session: 'Oral Presentations / Session 2', speakers: 'Pr Rouas & Dr Moujabbir', type: 'oral' },
  { time: '16:15 ‚Äì 16:30', session: 'Coffee Break', speakers: '', type: 'break' },
