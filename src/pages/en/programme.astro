      container: 'border-l-4 border-purple-500 bg-white dark:bg-slate-800 shadow-md hover:shadow-lg',
      icon: 'üõ†Ô∏è',
      text: 'text-purple-700 dark:text-purple-300'
    };
    case 'oral': return {
      container: 'border-l-4 border-slate-300 bg-slate-50 dark:bg-slate-800/50',
      icon: 'üìë',
      text: 'text-slate-600 dark:text-slate-400'
    };
    default: return {
      container: 'border-l-4 border-gray-300',
      icon: 'üìÖ',
      text: 'text-gray-600'
    };
  }
}
---

<BaseLayout
  title="Scientific Program - CIRIV'26"
  description="Discover the full program of the CIRIV'26 congress"
  locale={locale}
>
  <Header locale={locale} currentPath={Astro.url.pathname} />
  
  <main class="min-h-screen bg-slate-50 dark:bg-slate-900 pb-20">
    
    <div class="relative bg-gradient-to-br from-brand-primary to-teal-700 dark:from-slate-900 dark:to-slate-800 pt-24 pb-32 overflow-hidden">
      <div class="absolute top-0 left-0 w-64 h-64 bg-white/5 rounded-full -translate-x-1/2 -translate-y-1/2 blur-3xl"></div>
      <div class="absolute bottom-0 right-0 w-96 h-96 bg-brand-accent/10 rounded-full translate-x-1/3 translate-y-1/3 blur-3xl"></div>
      
      <div class="container mx-auto px-4 relative z-10 text-center">
        <span class="inline-block animate-fade-in-down px-4 py-1.5 rounded-full bg-white/10 backdrop-blur-md border border-white/20 text-white text-sm font-medium mb-6">
          April 7 ‚Äì 8, 2026 ‚Ä¢ Rabat, Morocco
        </span>
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 animate-fade-in-up">
          Scientific Program
        </h1>
        <p class="text-lg text-slate-100 max-w-2xl mx-auto opacity-90 animate-fade-in-up delay-100">
          Two days of innovation, exchange, and "One Health" strategies featuring world-class speakers and workshops.
        </p>
      </div>
    </div>

    <div class="container mx-auto px-4 -mt-20 relative z-20">
      
      <div class="flex justify-center mb-12">
        <div class="bg-white dark:bg-slate-800 p-1.5 rounded-2xl shadow-xl flex gap-2">
          <button 
            id="btn-day1"
            class="tab-btn px-8 py-3 rounded-xl text-sm md:text-base font-bold transition-all duration-300 bg-brand-primary text-white shadow-md"
            onclick="switchTab('day1')"
          >
            Day 1 (April 7)
          </button>
          <button 
            id="btn-day2"
            class="tab-btn px-8 py-3 rounded-xl text-sm md:text-base font-medium transition-all duration-300 text-slate-600 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-700"
            onclick="switchTab('day2')"
          >
            Day 2 (April 8)
          </button>
        </div>
      </div>

      <div class="max-w-4xl mx-auto">
        
        <div id="content-day1" class="space-y-6 schedule-container">
          {day1.map((item, index) => {
            const style = getStyles(item.type);
            return (
              <div 
                class={`group relative flex flex-col md:flex-row gap-4 md:gap-8 p-6 rounded-xl transition-all duration-300 hover:-translate-y-1 ${style.container}`}
                style={`animation-delay: ${index * 50}ms`} 
              >
                <div class="md:w-32 flex-shrink-0 flex md:flex-col items-center md:items-start gap-2">
                  <span class="text-sm font-bold text-slate-900 dark:text-white bg-slate-100 dark:bg-slate-700 px-3 py-1 rounded-md">
                    {item.time}
                  </span>
                  <div class="hidden md:block h-full w-px bg-slate-200 dark:bg-slate-700 my-2 mx-auto md:mx-0 md:ml-4"></div>
                </div>

                <div class="flex-grow">
                  <div class="flex items-start justify-between gap-4 mb-2">
                    <h3 class="text-lg md:text-xl font-bold text-slate-900 dark:text-white leading-tight">
                      {item.session}
                    </h3>
                    <span class="text-2xl">{style.icon}</span>
                  </div>
                  
                  {item.speakers && (
                    <div class={`mt-3 text-sm md:text-base flex items-start gap-2 ${style.text}`}>
                      <svg class="w-5 h-5 mt-0.5 flex-shrink-0 opacity-70" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
                      <span class="whitespace-pre-line font-medium opacity-90">{item.speakers}</span>
                    </div>
                  )}
                  
                  {item.type === 'break' && (
                     <p class="text-sm text-amber-600/70 italic mt-1">Networking & Refreshments</p>
                  )}
                </div>
              </div>
            );
          })}
        </div>

        <div id="content-day2" class="space-y-6 hidden schedule-container">
          {day2.map((item, index) => {
            const style = getStyles(item.type);
            return (
              <div 
                class={`group relative flex flex-col md:flex-row gap-4 md:gap-8 p-6 rounded-xl transition-all duration-300 hover:-translate-y-1 ${style.container}`}
                style={`animation-delay: ${index * 50}ms`} 
              >
                <div class="md:w-32 flex-shrink-0 flex md:flex-col items-center md:items-start gap-2">
                  <span class="text-sm font-bold text-slate-900 dark:text-white bg-slate-100 dark:bg-slate-700 px-3 py-1 rounded-md">
                    {item.time}
                  </span>
                  <div class="hidden md:block h-full w-px bg-slate-200 dark:bg-slate-700 my-2 mx-auto md:mx-0 md:ml-4"></div>
                </div>

                <div class="flex-grow">
                  <div class="flex items-start justify-between gap-4 mb-2">
                    <h3 class="text-lg md:text-xl font-bold text-slate-900 dark:text-white leading-tight">
                      {item.session}
                    </h3>
                    <span class="text-2xl">{style.icon}</span>
                  </div>
                  
                  {item.speakers && (
                    <div class={`mt-3 text-sm md:text-base flex items-start gap-2 ${style.text}`}>
                      <svg class="w-5 h-5 mt-0.5 flex-shrink-0 opacity-70" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
                      <span class="whitespace-pre-line font-medium opacity-90">{item.speakers}</span>
                    </div>
                  )}
                </div>
              </div>
            );
          })}
        </div>

      </div>
    </div>
  </main>

  <Footer locale={locale} />

  <script is:inline>
    function switchTab(day) {
      const btn1 = document.getElementById('btn-day1');
      const btn2 = document.getElementById('btn-day2');
      const content1 = document.getElementById('content-day1');
      const content2 = document.getElementById('content-day2');

      // Reset classes
      const activeClass = ['bg-brand-primary', 'text-white', 'shadow-md'];
      const inactiveClass = ['text-slate-600', 'dark:text-slate-300', 'hover:bg-slate-100', 'dark:hover:bg-slate-700'];

      if (day === 'day1') {
        // Style Buttons
        btn1.classList.add(...activeClass);
        btn1.classList.remove(...inactiveClass);
        btn2.classList.remove(...activeClass);
        btn2.classList.add(...inactiveClass);

        // Toggle Content with Animation
        content2.classList.add('hidden');
        content1.classList.remove('hidden');
        triggerAnimation(content1);
      } else {
        // Style Buttons
        btn2.classList.add(...activeClass);
        btn2.classList.remove(...inactiveClass);
        btn1.classList.remove(...activeClass);
        btn1.classList.add(...inactiveClass);

        // Toggle Content
        content1.classList.add('hidden');
        content2.classList.remove('hidden');
        triggerAnimation(content2);
      }
    }

    function triggerAnimation(element) {
      // Re-trigger CSS animation
      element.classList.remove('schedule-container');
      void element.offsetWidth; // trigger reflow
      element.classList.add('schedule-container');
    }
  </script>

  <style>
    /* Custom Entrance Animation */
    .schedule-container > div {
      opacity: 0;
      animation: fadeInUp 0.6s ease-out forwards;
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Delay utilities */
    .delay-100 { animation-delay: 100ms; }
    
    .animate-fade-in-up {
      animation: fadeInUp 0.8s ease-out forwards;
    }
    
    .animate-fade-in-down {
      animation: fadeInDown 0.8s ease-out forwards;
    }

    @keyframes fadeInDown {
      from { opacity: 0; transform: translateY(-20px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</BaseLayout>