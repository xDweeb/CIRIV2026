---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { useTranslations } from '../../i18n/ui';

const locale = 'ar';
const t = useTranslations(locale);

// Google Forms configuration from environment variables
const GOOGLE_FORM_ACTION = import.meta.env.GOOGLE_FORM_ACTION;
const GOOGLE_FORM_EMBED_URL = import.meta.env.GOOGLE_FORM_EMBED_URL;
const ENTRY_FULLNAME = import.meta.env.ENTRY_FULLNAME;
const ENTRY_EMAIL = import.meta.env.ENTRY_EMAIL;
const ENTRY_INSTITUTION = import.meta.env.ENTRY_INSTITUTION;
const ENTRY_COUNTRY = import.meta.env.ENTRY_COUNTRY;
const ENTRY_ROLE = import.meta.env.ENTRY_ROLE;
const ENTRY_NOTES = import.meta.env.ENTRY_NOTES;

const hasGoogleFormConfig = GOOGLE_FORM_ACTION && ENTRY_FULLNAME && ENTRY_EMAIL && ENTRY_INSTITUTION && ENTRY_COUNTRY && ENTRY_ROLE;
---

<BaseLayout
  title="التسجيل - CIRIV 2025"
  description="سجل في المؤتمر الدولي للصحة الواحدة CIRIV 2025"
  locale={locale}
>
  <Header locale={locale} currentPath={Astro.url.pathname} />
  
  <main class="min-h-screen bg-gradient-to-br from-slate-50 to-teal-50 dark:from-surface-dark dark:to-slate-800 py-12">
    <div class="container mx-auto px-4">
      <div class="max-w-2xl mx-auto">
        <!-- Header -->
        <div class="text-center mb-12">
          <h1 class="text-4xl font-bold text-slate-900 dark:text-white mb-4">
            تسجيل CIRIV 2025
          </h1>
          <p class="text-xl text-slate-600 dark:text-slate-300">
            انضم إلى أول مؤتمر دولي للصحة الواحدة في المغرب
          </p>
        </div>

        {hasGoogleFormConfig ? (
          <!-- Custom Form UI -->
          <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-xl p-8">
            <form method="POST" action={GOOGLE_FORM_ACTION} target="_blank" rel="noopener" class="space-y-6">
              <!-- Full Name -->
              <div>
                <label for="fullname" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2 text-right">
                  {t('form.fullName')} <span class="text-red-500">*</span>
                </label>
                <input
                  type="text"
                  id="fullname"
                  name={ENTRY_FULLNAME}
                  required
                  class="w-full px-4 py-3 border border-slate-300 dark:border-slate-600 rounded-lg focus:ring-2 focus:ring-brand-accent focus:border-transparent dark:bg-slate-700 dark:text-white transition-colors text-right"
                  placeholder="اسمك الكامل"
                />
              </div>

              <!-- Email -->
              <div>
                <label for="email" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2 text-right">
                  {t('form.email')} <span class="text-red-500">*</span>
                </label>
                <input
                  type="email"
                  id="email"
                  name={ENTRY_EMAIL}
                  required
                  class="w-full px-4 py-3 border border-slate-300 dark:border-slate-600 rounded-lg focus:ring-2 focus:ring-brand-accent focus:border-transparent dark:bg-slate-700 dark:text-white transition-colors"
                  placeholder="your@email.com"
                />
              </div>

              <!-- Institution -->
              <div>
                <label for="institution" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2 text-right">
                  {t('form.institution')} <span class="text-red-500">*</span>
                </label>
                <input
                  type="text"
                  id="institution"
                  name={ENTRY_INSTITUTION}
                  required
                  class="w-full px-4 py-3 border border-slate-300 dark:border-slate-600 rounded-lg focus:ring-2 focus:ring-brand-accent focus:border-transparent dark:bg-slate-700 dark:text-white transition-colors text-right"
                  placeholder="اسم مؤسستك"
                />
              </div>

              <!-- Country -->
              <div>
                <label for="country" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2 text-right">
                  {t('form.country')} <span class="text-red-500">*</span>
                </label>
                <input
                  type="text"
                  id="country"
                  name={ENTRY_COUNTRY}
                  required
                  class="w-full px-4 py-3 border border-slate-300 dark:border-slate-600 rounded-lg focus:ring-2 focus:ring-brand-accent focus:border-transparent dark:bg-slate-700 dark:text-white transition-colors text-right"
                  placeholder="بلدك"
                />
              </div>

              <!-- Role -->
              <div>
                <label for="role" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2 text-right">
                  {t('form.role')} <span class="text-red-500">*</span>
                </label>
                <select
                  id="role"
                  name={ENTRY_ROLE}
                  required
                  class="w-full px-4 py-3 border border-slate-300 dark:border-slate-600 rounded-lg focus:ring-2 focus:ring-brand-accent focus:border-transparent dark:bg-slate-700 dark:text-white transition-colors text-right"
                >
                  <option value="">اختر وظيفتك</option>
                  <option value="طالب">طالب</option>
                  <option value="طالب دكتوراه">طالب دكتوراه</option>
                  <option value="باحث">باحث</option>
                  <option value="أستاذ">أستاذ</option>
                  <option value="طبيب بيطري">طبيب بيطري</option>
                  <option value="طبيب">طبيب</option>
                  <option value="متخصص في الصحة العامة">متخصص في الصحة العامة</option>
                  <option value="أخرى">أخرى</option>
                </select>
              </div>

              <!-- Notes -->
              {ENTRY_NOTES && (
                <div>
                  <label for="notes" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2 text-right">
                    {t('form.notes')}
                  </label>
                  <textarea
                    id="notes"
                    name={ENTRY_NOTES}
                    rows="4"
                    class="w-full px-4 py-3 border border-slate-300 dark:border-slate-600 rounded-lg focus:ring-2 focus:ring-brand-accent focus:border-transparent dark:bg-slate-700 dark:text-white transition-colors text-right"
                    placeholder="معلومات إضافية (اختياري)"
                  ></textarea>
                </div>
              )}

              <!-- Submit Button -->
              <button
                type="submit"
                class="w-full px-6 py-4 bg-brand-primary hover:bg-brand-primaryDark text-white font-semibold rounded-lg transition-all duration-300 hover:scale-105 hover:shadow-lg hover:shadow-brand-primary/25 focus:outline-none focus:ring-2 focus:ring-brand-accent focus:ring-offset-2 dark:focus:ring-offset-slate-800"
              >
                {t('form.submit')}
              </button>

              <p class="text-sm text-slate-500 dark:text-slate-400 text-center">
                <span class="text-red-500">*</span> {t('form.required')}
              </p>
            </form>
          </div>
        ) : (
          <!-- Fallback: Configuration needed message -->
          <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-xl p-8">
            <div class="text-center py-12">
              <div class="w-16 h-16 bg-slate-100 dark:bg-slate-700 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
              </div>
              <h3 class="text-lg font-medium text-slate-900 dark:text-white mb-2">
                مطلوب تكوين النموذج
              </h3>
              <p class="text-slate-600 dark:text-slate-300 mb-6">
                سيكون نموذج التسجيل متاحًا بمجرد اكتمال تكوين نماذج Google.
              </p>
              <a
                href="/ar/contact/"
                class="inline-flex items-center gap-2 px-6 py-3 bg-brand-primary hover:bg-brand-primaryDark text-white font-medium rounded-lg transition-colors"
              >
                اتصل بنا
                <svg class="w-4 h-4 rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
              </a>
            </div>
          </div>
        )}

        <!-- Additional Information -->
        <div class="mt-8 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-xl p-6">
          <h3 class="text-lg font-semibold text-blue-900 dark:text-blue-100 mb-3 text-right">
            معلومات مهمة
          </h3>
          <ul class="space-y-2 text-blue-800 dark:text-blue-200">
            <li class="flex items-start gap-2 flex-row-reverse text-right">
              <svg class="w-5 h-5 mt-0.5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              أسعار مبكرة متاحة حتى 28 فبراير 2025
            </li>
            <li class="flex items-start gap-2 flex-row-reverse text-right">
              <svg class="w-5 h-5 mt-0.5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              تأكيد بالبريد الإلكتروني في غضون 24 ساعة
            </li>
            <li class="flex items-start gap-2 flex-row-reverse text-right">
              <svg class="w-5 h-5 mt-0.5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              دعم متعدد اللغات متاح
            </li>
          </ul>
        </div>
      </div>
    </div>
  </main>
  
  <Footer locale={locale} />
</BaseLayout>