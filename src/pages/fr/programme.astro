---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const locale = 'en';

// --- DATA ---
const day1 = [
  { time: '09:00 – 10:00', session: 'Participant Registration & Welcome', speakers: 'Organizing Team', type: 'event' },
  { time: '10:00 – 11:00', session: 'Inaugural Session', speakers: 'Pr Fassi Fihri, Minister of Agriculture, IAV Director, UH2 VP', type: 'plenary' },
  { time: '11:00 – 11:45', session: 'Opening Plenary Conference', subtitle: 'One Health 2030: Towards Integrated Governance', speakers: 'Speaker: Pr Fassi Fihri | Moderator: Pr Tanane', type: 'plenary' },
  { time: '11:45 – 12:15', session: 'Coffee Break', speakers: '', type: 'break' },
  { time: '12:15 – 13:00', session: 'SESSION 1: Biological Interfaces & Health Emergencies', subtitle: 'Biosecurity and One Health', speakers: 'Speaker: Pr Belkadi | Moderators: Pr Medraoui & Pr Noury', type: 'session' },
  { time: '13:00 – 14:00', session: 'Oral Presentations — Session 1', speakers: 'Pr Noury & Pr Medraoui', type: 'oral' },
  { time: '14:00 – 14:30', session: 'Lunch Break', speakers: '', type: 'break' },
  { time: '14:30 – 15:15', session: 'SESSION 2: Food Systems & Security', speakers: 'Speaker: Pr Sara Remón | Moderators: Pr Rouas & Dr Moujabbir', type: 'session' },
  { time: '15:15 – 16:15', session: 'Oral Presentations — Session 2', speakers: 'Pr Rouas & Dr Moujabbir', type: 'oral' },
  { time: '16:15 – 16:30', session: 'Coffee Break', speakers: '', type: 'break' },
  { time: '16:30 – 17:30', session: 'Workshop 1', speakers: 'AMBS', type: 'workshop' },
  { time: '17:30 – 18:30', session: 'Workshop 2', speakers: 'Pr Kasraoui Aziz & Dr El Moussati', type: 'workshop' },
];

const day2 = [
  { time: '09:00 – 09:45', session: 'SESSION 3: Environment & Global Health', subtitle: 'Ecological Stress & Reproductive Disruptions', speakers: 'Speaker: Pr Julie Garnier | Moderators: Pr Madkour & Pr Laakili', type: 'session' },
  { time: '09:45 – 10:45', session: 'Oral Presentations — Session 3', speakers: 'Moderators: Pr Madkour & Pr Laakili', type: 'oral' },
  { time: '10:45 – 11:00', session: 'Coffee Break', speakers: '', type: 'break' },
  { time: '11:00 – 11:45', session: 'SESSION 4: Chemistry & Biosecurity', speakers: 'Speaker: Pr Michoux | Moderators: Pr Tanane & Dr El Moussati', type: 'session' },
  { time: '11:45 – 12:45', session: 'Oral Presentations — Session 4', speakers: 'Moderators: Pr Tanane & Dr El Moussati', type: 'oral' },
  { time: '12:45 – 13:30', session: 'SESSION 5: Emerging Technologies & AI', speakers: 'Speaker: Pr Jacob Zinstag | Moderators: Pr Noury & Dr El Moussati', type: 'session' },
  { time: '13:30 – 14:30', session: 'Oral Presentations — Session 5', speakers: 'Moderators: Pr Noury & Dr El Moussati', type: 'oral' },
  { time: '14:30 – 15:00', session: 'Lunch Break', speakers: '', type: 'break' },
  { time: '15:00 – 15:45', session: 'SESSION 6: Sustainability & Resilience', speakers: 'Speaker: Pr Giovanni Ghielmetti | Moderators: Pr Mkamel & Pr Manoussi', type: 'session' },
  { time: '15:45 – 16:45', session: 'Oral Presentations — Session 6', speakers: 'Pr Mkamel & Pr Manoussi', type: 'oral' },
  { time: '16:45 – 17:00', session: 'Coffee Break', speakers: '', type: 'break' },
  { time: '17:00 – 18:00', session: 'Workshop 3', speakers: 'Pr Chgouri & Pr Mkamel', type: 'workshop' },
  { time: '18:00 – 19:00', session: 'Workshop 4', speakers: 'Pr Madkour & Pr Noury', type: 'workshop' },
  { time: '19:00 – 19:30', session: 'Closing Ceremony', speakers: 'Organizing Committee', type: 'plenary' },
];

// Professional SVG Icons
const icons = {
  break: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2m-4 0H9a4 4 0 01-4-4v-4a2 2 0 012-2h10a2 2 0 012 2v4a4 4 0 01-4 4z"/></svg>`,
  plenary: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"/></svg>`,
  session: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/></svg>`,
  workshop: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/></svg>`,
  oral: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>`,
  event: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/></svg>`,
};

// Styles Helper
function getStyles(type: string) {
  switch(type) {
    case 'break': return {
      container: 'bg-gradient-to-r from-amber-50 to-orange-50 dark:from-amber-900/20 dark:to-orange-900/20 border border-amber-200/50 dark:border-amber-700/30',
      iconBg: 'bg-amber-100 dark:bg-amber-800/50 text-amber-600 dark:text-amber-300',
      badge: 'bg-amber-100 text-amber-700 dark:bg-amber-800/50 dark:text-amber-300',
      text: 'text-amber-700 dark:text-amber-300'
    };
    case 'plenary': return {
      container: 'bg-gradient-to-r from-brand-primary/5 to-teal-500/5 dark:from-brand-primary/20 dark:to-teal-500/20 border border-brand-primary/20 dark:border-brand-primary/30',
      iconBg: 'bg-brand-primary/10 dark:bg-brand-primary/30 text-brand-primary dark:text-brand-accent',
      badge: 'bg-brand-primary/10 text-brand-primary dark:bg-brand-primary/30 dark:text-brand-accent',
      text: 'text-brand-primary dark:text-brand-accent'
    };
    case 'session': return {
      container: 'bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 shadow-lg shadow-slate-200/50 dark:shadow-slate-900/50',
      iconBg: 'bg-teal-100 dark:bg-teal-800/50 text-teal-600 dark:text-teal-300',
      badge: 'bg-teal-100 text-teal-700 dark:bg-teal-800/50 dark:text-teal-300',
      text: 'text-teal-700 dark:text-teal-300'
    };
    case 'workshop': return {
      container: 'bg-gradient-to-r from-purple-50 to-violet-50 dark:from-purple-900/20 dark:to-violet-900/20 border border-purple-200/50 dark:border-purple-700/30',
      iconBg: 'bg-purple-100 dark:bg-purple-800/50 text-purple-600 dark:text-purple-300',
      badge: 'bg-purple-100 text-purple-700 dark:bg-purple-800/50 dark:text-purple-300',
      text: 'text-purple-700 dark:text-purple-300'
    };
    case 'oral': return {
      container: 'bg-slate-50 dark:bg-slate-800/50 border border-slate-200 dark:border-slate-700',
      iconBg: 'bg-slate-200 dark:bg-slate-700 text-slate-500 dark:text-slate-400',
      badge: 'bg-slate-200 text-slate-600 dark:bg-slate-700 dark:text-slate-400',
      text: 'text-slate-600 dark:text-slate-400'
    };
    default: return {
      container: 'bg-slate-50 dark:bg-slate-800/50 border border-slate-200 dark:border-slate-700',
      iconBg: 'bg-slate-200 dark:bg-slate-700 text-slate-500 dark:text-slate-400',
      badge: 'bg-slate-200 text-slate-600 dark:bg-slate-700 dark:text-slate-400',
      text: 'text-slate-600 dark:text-slate-400'
    };
  }
}
---

<BaseLayout
  title="Scientific Program - CIRIV'26"
  description="Discover the full scientific program of CIRIV'26 congress"
  locale={locale}
>
  <Header locale={locale} currentPath={Astro.url.pathname} />
  
  <main class="min-h-screen bg-gradient-to-b from-slate-50 to-slate-100 dark:from-slate-900 dark:to-slate-950">
    
    <!-- Hero Section -->
    <div class="relative bg-gradient-to-br from-brand-primary via-teal-600 to-emerald-700 dark:from-slate-900 dark:via-slate-800 dark:to-slate-900 pt-28 pb-40 overflow-hidden">
      <!-- Decorative Elements -->
      <div class="absolute inset-0 overflow-hidden">
        <div class="absolute top-0 left-1/4 w-96 h-96 bg-white/10 rounded-full blur-3xl"></div>
        <div class="absolute bottom-0 right-1/4 w-80 h-80 bg-brand-accent/20 rounded-full blur-3xl"></div>
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-gradient-to-r from-transparent via-white/5 to-transparent rounded-full"></div>
      </div>
      
      <div class="container mx-auto px-4 relative z-10 text-center">
        <div class="inline-flex items-center gap-2 animate-fade-in-down px-5 py-2 rounded-full bg-white/10 backdrop-blur-md border border-white/20 text-white text-sm font-medium mb-8">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
          April 7 – 8, 2026 • Rabat, Morocco
        </div>
        <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-white mb-6 animate-fade-in-up tracking-tight">
          Scientific Program
        </h1>
        <p class="text-lg md:text-xl text-white/90 max-w-3xl mx-auto animate-fade-in-up animation-delay-100 leading-relaxed">
          Two days of innovation, knowledge exchange, and "One Health" strategies with world-class speakers and interactive workshops.
        </p>
      </div>
    </div>

    <!-- Tab Navigation & Content -->
    <div class="container mx-auto px-4 -mt-24 relative z-20 pb-20">
      
      <!-- Day Tabs -->
      <div class="flex justify-center mb-10">
        <div class="bg-white dark:bg-slate-800 p-2 rounded-2xl shadow-2xl shadow-slate-300/50 dark:shadow-slate-900/50 flex gap-2 border border-slate-200/50 dark:border-slate-700/50">
          <button 
            id="btn-day1"
            class="tab-btn group relative px-8 py-4 rounded-xl text-sm md:text-base font-semibold transition-all duration-300 bg-brand-primary text-white shadow-lg shadow-brand-primary/30"
            onclick="switchTab('day1')"
          >
            <span class="relative z-10 flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707"/></svg>
              Day 1
            </span>
            <span class="block text-xs opacity-80 mt-0.5">April 7</span>
          </button>
          <button 
            id="btn-day2"
            class="tab-btn group relative px-8 py-4 rounded-xl text-sm md:text-base font-semibold transition-all duration-300 text-slate-600 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-700"
            onclick="switchTab('day2')"
          >
            <span class="relative z-10 flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"/></svg>
              Day 2
            </span>
            <span class="block text-xs opacity-60 mt-0.5">April 8</span>
          </button>
        </div>
      </div>

      <!-- Legend -->
      <div class="max-w-4xl mx-auto mb-8">
        <div class="flex flex-wrap justify-center gap-3 text-xs font-medium">
          <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full bg-brand-primary/10 text-brand-primary dark:bg-brand-primary/20 dark:text-brand-accent">
            <span class="w-2 h-2 rounded-full bg-brand-primary"></span> Plenary
          </span>
          <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full bg-teal-100 text-teal-700 dark:bg-teal-800/50 dark:text-teal-300">
            <span class="w-2 h-2 rounded-full bg-teal-500"></span> Session
          </span>
          <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full bg-purple-100 text-purple-700 dark:bg-purple-800/50 dark:text-purple-300">
            <span class="w-2 h-2 rounded-full bg-purple-500"></span> Workshop
          </span>
          <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full bg-amber-100 text-amber-700 dark:bg-amber-800/50 dark:text-amber-300">
            <span class="w-2 h-2 rounded-full bg-amber-500"></span> Break
          </span>
        </div>
      </div>

      <!-- Schedule Content -->
      <div class="max-w-4xl mx-auto">
        
        <!-- Day 1 -->
        <div id="content-day1" class="space-y-4 schedule-container">
          {day1.map((item, index) => {
            const style = getStyles(item.type);
            const icon = icons[item.type as keyof typeof icons] || icons.event;
            return (
              <div 
                class={`group relative flex gap-4 md:gap-6 p-5 md:p-6 rounded-2xl transition-all duration-300 hover:scale-[1.01] hover:shadow-xl ${style.container}`}
                style={`animation-delay: ${index * 60}ms`} 
              >
                <!-- Icon -->
                <div class="flex-shrink-0 flex flex-col items-center">
                  <div class={`w-12 h-12 md:w-14 md:h-14 rounded-xl flex items-center justify-center ${style.iconBg}`} set:html={icon} />
                  <div class="mt-2 text-center">
                    <span class={`text-xs font-bold ${style.text}`}>{item.time.split('–')[0].trim()}</span>
                  </div>
                </div>

                <!-- Content -->
                <div class="flex-grow min-w-0">
                  <div class="flex items-start justify-between gap-3">
                    <div class="min-w-0">
                      <h3 class="text-base md:text-lg font-bold text-slate-900 dark:text-white leading-snug">
                        {item.session}
                      </h3>
                      {item.subtitle && (
                        <p class="text-sm text-slate-600 dark:text-slate-400 mt-1 italic">{item.subtitle}</p>
                      )}
                    </div>
                    <span class={`flex-shrink-0 text-[10px] font-bold uppercase tracking-wider px-2 py-1 rounded-md ${style.badge}`}>
                      {item.time}
                    </span>
                  </div>
                  
                  {item.speakers && (
                    <div class={`mt-3 flex items-start gap-2 text-sm ${style.text}`}>
                      <svg class="w-4 h-4 mt-0.5 flex-shrink-0 opacity-70" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/></svg>
                      <span class="font-medium">{item.speakers}</span>
                    </div>
                  )}
                  
                  {item.type === 'break' && (
                    <p class="text-xs text-amber-600/80 dark:text-amber-400/80 mt-2 flex items-center gap-1">
                      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/></svg>
                      Networking & Refreshments
                    </p>
                  )}
                </div>
              </div>
            );
          })}
        </div>

        <!-- Day 2 -->
        <div id="content-day2" class="space-y-4 hidden schedule-container">
          {day2.map((item, index) => {
            const style = getStyles(item.type);
            const icon = icons[item.type as keyof typeof icons] || icons.event;
            return (
              <div 
                class={`group relative flex gap-4 md:gap-6 p-5 md:p-6 rounded-2xl transition-all duration-300 hover:scale-[1.01] hover:shadow-xl ${style.container}`}
                style={`animation-delay: ${index * 60}ms`} 
              >
                <!-- Icon -->
                <div class="flex-shrink-0 flex flex-col items-center">
                  <div class={`w-12 h-12 md:w-14 md:h-14 rounded-xl flex items-center justify-center ${style.iconBg}`} set:html={icon} />
                  <div class="mt-2 text-center">
                    <span class={`text-xs font-bold ${style.text}`}>{item.time.split('–')[0].trim()}</span>
                  </div>
                </div>

                <!-- Content -->
                <div class="flex-grow min-w-0">
                  <div class="flex items-start justify-between gap-3">
                    <div class="min-w-0">
                      <h3 class="text-base md:text-lg font-bold text-slate-900 dark:text-white leading-snug">
                        {item.session}
                      </h3>
                      {item.subtitle && (
                        <p class="text-sm text-slate-600 dark:text-slate-400 mt-1 italic">{item.subtitle}</p>
                      )}
                    </div>
                    <span class={`flex-shrink-0 text-[10px] font-bold uppercase tracking-wider px-2 py-1 rounded-md ${style.badge}`}>
                      {item.time}
                    </span>
                  </div>
                  
                  {item.speakers && (
                    <div class={`mt-3 flex items-start gap-2 text-sm ${style.text}`}>
                      <svg class="w-4 h-4 mt-0.5 flex-shrink-0 opacity-70" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/></svg>
                      <span class="font-medium">{item.speakers}</span>
                    </div>
                  )}
                  
                  {item.type === 'break' && (
                    <p class="text-xs text-amber-600/80 dark:text-amber-400/80 mt-2 flex items-center gap-1">
                      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/></svg>
                      Networking & Refreshments
                    </p>
                  )}
                </div>
              </div>
            );
          })}
        </div>

      </div>
    </div>
  </main>

  <Footer locale={locale} />

  <script is:inline>
    function switchTab(day) {
      const btn1 = document.getElementById('btn-day1');
      const btn2 = document.getElementById('btn-day2');
      const content1 = document.getElementById('content-day1');
      const content2 = document.getElementById('content-day2');

      const activeClass = ['bg-brand-primary', 'text-white', 'shadow-lg', 'shadow-brand-primary/30'];
      const inactiveClass = ['text-slate-600', 'dark:text-slate-300', 'hover:bg-slate-100', 'dark:hover:bg-slate-700'];

      if (day === 'day1') {
        btn1.classList.add(...activeClass);
        btn1.classList.remove(...inactiveClass);
        btn2.classList.remove(...activeClass);
        btn2.classList.add(...inactiveClass);
        content2.classList.add('hidden');
        content1.classList.remove('hidden');
        triggerAnimation(content1);
      } else {
        btn2.classList.add(...activeClass);
        btn2.classList.remove(...inactiveClass);
        btn1.classList.remove(...activeClass);
        btn1.classList.add(...inactiveClass);
        content1.classList.add('hidden');
        content2.classList.remove('hidden');
        triggerAnimation(content2);
      }
    }

    function triggerAnimation(element) {
      element.classList.remove('schedule-container');
      void element.offsetWidth;
      element.classList.add('schedule-container');
    }
  </script>

  <style>
    .schedule-container > div {
      opacity: 0;
      animation: fadeSlideIn 0.5s ease-out forwards;
    }

    @keyframes fadeSlideIn {
      from {
        opacity: 0;
        transform: translateY(16px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .animate-fade-in-up {
      animation: fadeInUp 0.7s ease-out forwards;
    }
    
    .animate-fade-in-down {
      animation: fadeInDown 0.7s ease-out forwards;
    }

    .animation-delay-100 {
      animation-delay: 100ms;
    }

    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(24px); }
      to { opacity: 1; transform: translateY(0); }
    }

    @keyframes fadeInDown {
      from { opacity: 0; transform: translateY(-24px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</BaseLayout>