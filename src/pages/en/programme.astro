  { time: '11:45 ‚Äì 12:45', session: 'Oral Presentations / Session 4', speakers: 'Moderators: Pr Tanane & Dr El Moussati', type: 'oral' },
  { time: '12:45 ‚Äì 13:30', session: 'SESSION 5: Emerging Technologies & AI', speakers: 'Speaker: Pr Jacob Zinstag\nModerators: Pr Noury & Dr El Moussati', type: 'session' },
  { time: '13:30 ‚Äì 14:30', session: 'Oral Presentations / Session 5', speakers: 'Moderators: Pr Noury & Dr El Moussati', type: 'oral' },
  { time: '14:30 ‚Äì 15:00', session: 'Lunch Break', speakers: '', type: 'break' },
  { time: '15:00 ‚Äì 15:45', session: 'SESSION 6: Sustainability & Resilience', speakers: 'Speaker: Pr Giovanni Ghielmetti\nModerators: Pr Mkamel & Pr Manoussi', type: 'session' },
  { time: '15:45 ‚Äì 16:45', session: 'Oral Presentations / Session 6', speakers: 'Pr Mkamel & Pr Manoussi', type: 'oral' },
  { time: '16:45 ‚Äì 17:00', session: 'Coffee Break', speakers: '', type: 'break' },
  { time: '17:00 ‚Äì 18:00', session: 'Workshop 3', speakers: 'Pr Chgouri & Pr Mkamel', type: 'workshop' },
  { time: '18:00 ‚Äì 19:00', session: 'Workshop 4', speakers: 'Pr Madkour & Pr Noury', type: 'workshop' },
  { time: '19:00 ‚Äì 19:30', session: 'Closing Session', speakers: 'Organizing Committee', type: 'plenary' },
];

// Styles Helper
function getStyles(type: string) {
  switch(type) {
    case 'break': return {
      container: 'border-l-4 border-amber-400 bg-amber-50/50 dark:bg-amber-900/10',
      icon: '‚òï',
      text: 'text-amber-800 dark:text-amber-200'
    };
    case 'plenary': return {
      container: 'border-l-4 border-brand-primary bg-brand-primary/5 dark:bg-brand-primary/10 shadow-sm',
      icon: 'üé§',
      text: 'text-brand-primary dark:text-brand-accent'
    };
    case 'session': return {
      container: 'border-l-4 border-teal-500 bg-white dark:bg-slate-800 shadow-md hover:shadow-lg',
