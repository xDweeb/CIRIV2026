---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Hero from '../../components/Hero.astro';
import Footer from '../../components/Footer.astro';
import CountdownWidget from '../../components/CountdownWidget.astro';
import { useTranslations } from '../../i18n/ui';
import { link } from '../../utils/paths';

const locale = 'fr';
const t = useTranslations(locale);
---

<BaseLayout
  title="CIRIV 2026 - Conférence Internationale One Health"
  description="Rejoignez les professionnels de la recherche, innovation et valorisation pour la première édition du CIRIV au Maroc"
  locale={locale}
>
  <Header locale={locale} currentPath={Astro.url.pathname} />
  <main>
    <Hero locale={locale} />
    
    <!-- Countdown Section -->
    <section class="py-16 bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-900 dark:to-gray-800">
      <div class="container mx-auto px-4">
        <CountdownWidget locale={locale} />
      </div>
    </section>
    
    <!-- Quick Links Section -->
    <section class="py-16 bg-white dark:bg-surface-dark">
      <div class="container mx-auto px-4">
        <div class="grid md:grid-cols-3 gap-8">
          <a 
            href={link({ locale, slug: 'dates' })} 
            class="group p-6 bg-slate-50 dark:bg-slate-800 rounded-xl hover:shadow-lg transition-all duration-300 hover:scale-105"
          >
            <div class="flex items-center gap-4 mb-4">
              <div class="w-12 h-12 bg-brand-primary/10 rounded-lg flex items-center justify-center group-hover:bg-brand-primary group-hover:text-white transition-colors">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-slate-900 dark:text-white">Dates importantes</h3>
            </div>
            <p class="text-slate-600 dark:text-slate-300">Consultez le calendrier complet de l'événement et dates limites</p>
          </a>

          <a 
            href={link({ locale, slug: 'comites' })} 
            class="group p-6 bg-slate-50 dark:bg-slate-800 rounded-xl hover:shadow-lg transition-all duration-300 hover:scale-105"
          >
            <div class="flex items-center gap-4 mb-4">
              <div class="w-12 h-12 bg-brand-primary/10 rounded-lg flex items-center justify-center group-hover:bg-brand-primary group-hover:text-white transition-colors">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-slate-900 dark:text-white">Comités</h3>
            </div>
            <p class="text-slate-600 dark:text-slate-300">Découvrez les membres des comités scientifique et d'organisation</p>
          </a>

          <a 
            href={link({ locale, slug: 'contact' })} 
            class="group p-6 bg-slate-50 dark:bg-slate-800 rounded-xl hover:shadow-lg transition-all duration-300 hover:scale-105"
          >
            <div class="flex items-center gap-4 mb-4">
              <div class="w-12 h-12 bg-brand-primary/10 rounded-lg flex items-center justify-center group-hover:bg-brand-primary group-hover:text-white transition-colors">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-slate-900 dark:text-white">Contact</h3>
            </div>
            <p class="text-slate-600 dark:text-slate-300">Contactez l'équipe organisatrice pour toute question</p>
          </a>
        </div>
      </div>
    </section>
  </main>
  <Footer locale={locale} />
</BaseLayout>