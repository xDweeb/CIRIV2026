---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { useTranslations } from '../../i18n/ui';

const locale = 'fr';
const t = useTranslations(locale);
---

<BaseLayout
  title="Inscription - CIRIV 2026"
  description="Inscrivez-vous au Congrès International de Recherche, Innovation et Valorisation CIRIV 2026"
  locale={locale}
>
  <Header locale={locale} currentPath={Astro.url.pathname} />
  
  <main class="min-h-screen bg-gradient-to-br from-slate-50 to-teal-50 dark:from-surface-dark dark:to-slate-800 py-12">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <!-- Messages d’alerte -->
        <div id="alert-container" class="mb-6 hidden">
          <div id="alert-content" class="rounded-lg p-4 flex items-start space-x-3 transform transition-all duration-500 ease-in-out opacity-0 translate-y-[-20px]">
            <div id="alert-icon" class="flex-shrink-0 text-2xl"></div>
            <div class="flex-1">
              <p id="alert-message" class="font-medium"></p>
            </div>
            <button id="alert-close" class="flex-shrink-0 text-white hover:opacity-80 transition-opacity">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
              </svg>
            </button>
          </div>
        </div>

        <!-- En-tête -->
        <div class="text-center mb-12">
          <h1 class="text-4xl font-bold text-slate-900 dark:text-white mb-4">
            Inscription CIRIV 2026
          </h1>
          <p class="text-xl text-slate-600 dark:text-slate-300">
            Participez au premier Congrès International de Recherche, Innovation et Valorisation au Maroc
          </p>
        </div>

        <!-- Barre de progression -->
        <div class="mb-8">
          <div class="flex items-center justify-center space-x-4">
            <div class="flex items-center">
              <div id="step1-indicator" class="w-8 h-8 bg-brand-primary text-white rounded-full flex items-center justify-center font-semibold transition-all duration-300">
                1
              </div>
              <span class="ml-2 text-sm font-medium text-slate-700 dark:text-slate-300">Informations personnelles</span>
            </div>
            <div class="w-16 h-0.5 bg-slate-300 dark:bg-slate-600"></div>
            <div class="flex items-center">
              <div id="step2-indicator" class="w-8 h-8 bg-slate-300 dark:bg-slate-600 text-slate-500 rounded-full flex items-center justify-center font-semibold transition-all duration-300">
                2
              </div>
              <span class="ml-2 text-sm font-medium text-slate-500">Type de participation</span>
            </div>
          </div>
        </div>

        <!-- Formulaire d’inscription -->
        <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-xl p-8">
          <form id="registration-form" class="space-y-6">
            
            <!-- Étape 1 : Informations personnelles -->
            <div id="step1" class="space-y-6">
              <h2 class="text-2xl font-semibold text-slate-900 dark:text-white mb-6">
                Étape 1 : Informations personnelles
              </h2>

              <div class="grid md:grid-cols-2 gap-6">
                <!-- Nom -->
                <div>
                  <label for="nom" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                    Nom <span class="text-red-500">*</span>
                  </label>
                  <input type="text" id="nom" name="nom" required placeholder="Votre nom" class="w-full px-4 py-3 border ..." />
                  <p class="text-red-500 text-xs mt-1 hidden error-message">Ce champ est requis</p>
                </div>

                <!-- Prénom -->
                <div>
                  <label for="prenom" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                    Prénom <span class="text-red-500">*</span>
                  </label>
                  <input type="text" id="prenom" name="prenom" required placeholder="Votre prénom" class="w-full px-4 py-3 border ..." />
                  <p class="text-red-500 text-xs mt-1 hidden error-message">Ce champ est requis</p>
                </div>
              </div>

              <div class="grid md:grid-cols-2 gap-6">
                <!-- Civilité -->
                <div>
                  <label for="civilite" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                    Civilité / Genre
                  </label>
                  <select id="civilite" name="civilite" class="w-full px-4 py-3 border ...">
                    <option value="">Sélectionner</option>
                    <option value="Mr.">M.</option>
                    <option value="Ms.">Mme</option>
                  </select>
                </div>

                <!-- Email -->
                <div>
                  <label for="email" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                    Email <span class="text-red-500">*</span>
                  </label>
                  <input type="email" id="email" name="email" required placeholder="votre@email.com" class="w-full px-4 py-3 border ..." />
                  <p class="text-red-500 text-xs mt-1 hidden error-message">Veuillez entrer un email valide</p>
                </div>
              </div>

              <div class="grid md:grid-cols-2 gap-6">
                <!-- Téléphone -->
                <div>
                  <label for="telephone" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                    Téléphone
                  </label>
                  <input type="tel" id="telephone" name="telephone" placeholder="+212 6XX-XXXXXX" class="w-full px-4 py-3 border ..." />
                </div>

                <!-- Établissement -->
                <div>
                  <label for="etablissement" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                    Établissement <span class="text-red-500">*</span>
                  </label>
                  <input type="text" id="etablissement" name="etablissement" required placeholder="Nom de votre établissement" class="w-full px-4 py-3 border ..." />
                  <p class="text-red-500 text-xs mt-1 hidden error-message">Ce champ est requis</p>
                </div>
              </div>

              <div class="grid md:grid-cols-2 gap-6">
                <!-- Département -->
                <div>
                  <label for="departement" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                    Laboratoire / Département
                  </label>
                  <input type="text" id="departement" name="departement" placeholder="Laboratoire ou département" class="w-full px-4 py-3 border ..." />
                </div>

                <!-- Ville -->
                <div>
                  <label for="ville" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                    Ville & Pays <span class="text-red-500">*</span>
                  </label>
                  <input type="text" id="ville" name="ville" required placeholder="Ville, Pays" class="w-full px-4 py-3 border ..." />
                  <p class="text-red-500 text-xs mt-1 hidden error-message">Ce champ est requis</p>
                </div>
              </div>

              <!-- Statut -->
              <div>
                <label for="statut" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                  Statut <span class="text-red-500">*</span>
                </label>
                <select id="statut" name="statut" required class="w-full px-4 py-3 border ...">
                  <option value="">Sélectionnez votre statut</option>
                  <option value="Student">Étudiant</option>
                  <option value="PhD Student">Doctorant</option>
                  <option value="Lecturer-Researcher">Enseignant-Chercheur</option>
                  <option value="Researcher">Chercheur</option>
                  <option value="Professional">Professionnel</option>
                </select>
                <p class="text-red-500 text-xs mt-1 hidden error-message">Veuillez sélectionner votre statut</p>
              </div>

              <!-- Bouton Suivant -->
              <div class="flex justify-end">
                <button type="button" id="next-step" class="px-8 py-3 bg-brand-primary ...">
                  Suivant →
                </button>
              </div>
            </div>

            <!-- Étape 2 : Type de participation -->
            <div id="step2" class="space-y-6 hidden">
              <h2 class="text-2xl font-semibold text-slate-900 dark:text-white mb-6">
                Étape 2 : Type de participation
              </h2>

              <!-- Radios -->
              <div>
                <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-4">
                  Comment souhaitez-vous participer ? <span class="text-red-500">*</span>
                </label>
                <div class="space-y-3">
                  <label class="flex items-center p-4 border ...">
                    <input type="radio" name="typeParticipation" value="Participant" class="w-4 h-4 ..." />
                    <div class="ml-3">
                      <div class="text-sm font-medium">Participant</div>
                      <div class="text-sm text-slate-500">Assister aux conférences et participer aux discussions</div>
                    </div>
                  </label>
                  <label class="flex items-center p-4 border ...">
                    <input type="radio" name="typeParticipation" value="Presenter" class="w-4 h-4 ..." />
                    <div class="ml-3">
                      <div class="text-sm font-medium">Présentateur</div>
                      <div class="text-sm text-slate-500">Présenter une communication (orale ou poster)</div>
                    </div>
                  </label>
                </div>
                <p class="text-red-500 text-xs mt-1 hidden error-message">Veuillez sélectionner un type</p>
              </div>

              <!-- Champs Présentateur -->
              <div id="presenter-fields" class="space-y-6 hidden">
                <div class="border-t pt-6">
                  <h3 class="text-lg font-medium mb-4">Informations sur votre communication</h3>

                  <div class="mb-4">
                    <label for="titreCommunication" class="block text-sm font-medium mb-2">
                      Titre de la communication <span class="text-red-500">*</span>
                    </label>
                    <input type="text" id="titreCommunication" name="titreCommunication" placeholder="Titre de votre communication" class="w-full px-4 py-3 border ..." />
                    <p class="text-red-500 text-xs mt-1 hidden error-message">Ce champ est requis</p>
                  </div>

                  <div class="grid md:grid-cols-2 gap-6">
                    <div>
                      <label for="auteurs" class="block text-sm font-medium mb-2">
                        Auteurs <span class="text-red-500">*</span>
                      </label>
                      <input type="text" id="auteurs" name="auteurs" placeholder="Auteur 1, Auteur 2, ..." class="w-full px-4 py-3 border ..." />
                      <p class="text-red-500 text-xs mt-1 hidden error-message">Ce champ est requis</p>
                    </div>
                    <div>
                      <label for="auteurCorrespondant" class="block text-sm font-medium mb-2">
                        Auteur correspondant <span class="text-red-500">*</span>
                      </label>
                      <input type="text" id="auteurCorrespondant" name="auteurCorrespondant" placeholder="Nom de l’auteur correspondant" class="w-full px-4 py-3 border ..." />
                      <p class="text-red-500 text-xs mt-1 hidden error-message">Ce champ est requis</p>
                    </div>
                  </div>

                  <div class="grid md:grid-cols-2 gap-6">
                    <div>
                      <label for="thematique" class="block text-sm font-medium mb-2">
                        Thématique <span class="text-red-500">*</span>
                      </label>
                      <select id="thematique" name="thematique" class="w-full px-4 py-3 border ...">
                        <option value="">Sélectionner une thématique</option>
                        <option value="Human Health">Santé humaine</option>
                        <option value="Animal Health">Santé animale</option>
                        <option value="Environment">Environnement</option>
                        <option value="Interdisciplinary">Interdisciplinaire</option>
                      </select>
                      <p class="text-red-500 text-xs mt-1 hidden error-message">Veuillez sélectionner une thématique</p>
                    </div>
                    <div>
                      <label for="choixCommunication" class="block text-sm font-medium mb-2">
                        Type de communication <span class="text-red-500">*</span>
                      </label>
                      <select id="choixCommunication" name="choixCommunication" class="w-full px-4 py-3 border ...">
                        <option value="">Sélectionner un type</option>
                        <option value="Oral Communication">Communication orale</option>
                        <option value="Poster Communication">Communication poster</option>
                      </select>
                      <p class="text-red-500 text-xs mt-1 hidden error-message">Veuillez sélectionner un type</p>
                    </div>
                  </div>

                  <!-- Lien fichier -->
                  <div>
                    <label for="resumeFileLink" class="block text-sm font-medium mb-2">
                      Résumé (Lien fichier) <span class="text-red-500">*</span>
                    </label>
                    <input type="url" id="resumeFileLink" name="resumeFileLink" placeholder="https://drive.google.com/file/..." class="w-full px-4 py-3 border ..." />
                    <p class="mt-2 text-sm text-slate-500">Téléversez votre résumé (Drive, Dropbox, OneDrive) et collez le lien ici. Formats acceptés : PDF, DOC, DOCX</p>
                    <p class="text-red-500 text-xs mt-1 hidden error-message">Veuillez fournir un lien</p>
                  </div>
                </div>
              </div>

              <!-- Boutons navigation -->
              <div class="flex justify-between pt-6">
                <button type="button" id="prev-step" class="px-8 py-3 border ...">← Précédent</button>
                <button type="submit" id="submit-form" class="px-8 py-3 bg-green-600 ...">
                  <span id="submit-text">Valider l’inscription</span>
                  <span id="submit-loader" class="hidden">Envoi...</span>
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </main>
  
  <Footer locale={locale} />
</BaseLayout>

<script>
  const messages = {
    sending: '⏳ Envoi en cours...',
    success: 'Votre inscription a bien été enregistrée.',
    error: 'Erreur lors de l’envoi. Veuillez réessayer.',
    networkError: 'Erreur réseau. Vérifiez votre connexion.',
    serverError: 'Erreur serveur. Réessayez plus tard.',
    requiredField: 'Ce champ est requis',
    validEmail: 'Veuillez entrer un email valide',
    selectStatus: 'Veuillez sélectionner votre statut',
    selectParticipation: 'Veuillez sélectionner un type de participation',
    selectTheme: 'Veuillez sélectionner une thématique',
    selectType: 'Veuillez sélectionner un type',
    uploadLink: 'Veuillez fournir un lien de fichier'
  };
</script>
