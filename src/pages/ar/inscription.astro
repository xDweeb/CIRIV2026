      const errorMsg = element.parentElement.querySelector('.error-message');
      
      if (!element.value.trim()) {
        element.classList.add('border-red-500');
        if (errorMsg) {
          errorMsg.textContent = field.message;
          errorMsg.classList.remove('hidden');
        }
        isValid = false;
