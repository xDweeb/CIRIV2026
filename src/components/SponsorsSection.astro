---
import { useTranslations } from '../i18n/ui';
import { link } from '../utils/paths';
import sponsors from '../content/sponsors.json';

interface Props {
  locale: 'fr' | 'en' | 'ar';
  showCTA?: boolean;
}

const { locale, showCTA = true } = Astro.props;
const t = useTranslations(locale);
const isRTL = locale === 'ar';
const baseUrl = import.meta.env.BASE_URL || '/';

// Type mapping for translations
const typeLabels: Record<string, Record<string, string>> = {
  'Institutional': {
    fr: 'Partenaire Institutionnel',
    en: 'Institutional Partner',
    ar: 'شريك مؤسسي'
  },
  'Academic': {
    fr: 'Partenaire Académique',
    en: 'Academic Partner',
    ar: 'شريك أكاديمي'
  },
  'Partner': {
    fr: 'Partenaire',
    en: 'Partner',
    ar: 'شريك'
  }
};

function getTypeLabel(type: string): string {
  return typeLabels[type]?.[locale] || type;
}

const hasSponsors = sponsors && sponsors.length > 0;
---

<section class="py-12 md:py-16 bg-slate-50 dark:bg-slate-900/50" aria-labelledby="sponsors-heading">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class={`text-center mb-10 md:mb-12 ${isRTL ? 'rtl' : ''}`}>
      <h2 id="sponsors-heading" class="text-2xl md:text-3xl lg:text-4xl font-bold text-brand-primary dark:text-brand-accent mb-4">
        {t('sponsors.title')}
      </h2>
      <div class="w-20 h-1 bg-brand-primary mx-auto rounded-full mb-6"></div>
      <p class={`text-base md:text-lg text-slate-600 dark:text-slate-300 max-w-2xl mx-auto ${isRTL ? 'font-arabic' : ''}`}>
        {t('sponsors.description')}
      </p>
    </div>

    {hasSponsors ? (
      <!-- Sponsors Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8 max-w-5xl mx-auto mb-8">
        {sponsors.map((sponsor: { name: string; type: string; logo: string | null; url: string | null }) => (
          <article 
            class={`sponsor-card group bg-white dark:bg-slate-800 rounded-2xl p-6 shadow-md hover:shadow-xl transition-all duration-300 border border-slate-200 dark:border-slate-700 hover:border-brand-accent dark:hover:border-brand-accent ${isRTL ? 'text-right' : 'text-left'}`}
            role="article"
            aria-label={sponsor.name}
          >
            <!-- Logo Placeholder -->
            <div class="w-full h-24 mb-4 flex items-center justify-center bg-slate-100 dark:bg-slate-700 rounded-xl overflow-hidden">
              {sponsor.logo ? (
                <img 
                  src={`${baseUrl}${sponsor.logo}`}
                  alt={`${sponsor.name} logo`}
                  class="max-h-16 max-w-full object-contain"
                  loading="lazy"
                />
              ) : (
                <div class="text-slate-400 dark:text-slate-500">
                  <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                  </svg>
                </div>
              )}
            </div>

            <!-- Sponsor Info -->
            <div class="space-y-2">
              <span class={`inline-block px-3 py-1 text-xs font-medium rounded-full bg-brand-primary/10 text-brand-primary dark:bg-brand-accent/10 dark:text-brand-accent ${isRTL ? 'font-arabic' : ''}`}>
                {getTypeLabel(sponsor.type)}
              </span>
              <h3 class="text-lg font-semibold text-slate-800 dark:text-white group-hover:text-brand-primary dark:group-hover:text-brand-accent transition-colors">
                {sponsor.name}
              </h3>
              {sponsor.url && (
                <a 
                  href={sponsor.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class={`inline-flex items-center gap-1 text-sm text-brand-primary dark:text-brand-accent hover:underline ${isRTL ? 'flex-row-reverse' : ''}`}
                  aria-label={`${t('sponsors.learnMore')} - ${sponsor.name}`}
                >
                  {t('sponsors.learnMore')}
                  <svg class={`w-4 h-4 ${isRTL ? 'rotate-180' : ''}`} fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                  </svg>
                </a>
              )}
            </div>
          </article>
        ))}
      </div>
    ) : (
      <!-- Empty State -->
      <div class={`text-center py-12 ${isRTL ? 'rtl' : ''}`}>
        <div class="max-w-md mx-auto">
          <div class="w-20 h-20 mx-auto mb-6 bg-slate-100 dark:bg-slate-800 rounded-full flex items-center justify-center">
            <svg class="w-10 h-10 text-slate-400 dark:text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <p class={`text-lg text-slate-500 dark:text-slate-400 ${isRTL ? 'font-arabic' : ''}`}>
            {t('sponsors.comingSoon')}
          </p>
        </div>
      </div>
    )}

    {showCTA && (
      <!-- CTA Link -->
      <div class="text-center mt-8">
        <a
          href={link({ locale, slug: 'sponsors' })}
          class={`inline-flex items-center gap-2 px-6 py-3 text-brand-primary dark:text-brand-accent border-2 border-brand-primary dark:border-brand-accent rounded-xl font-medium hover:bg-brand-primary hover:text-white dark:hover:bg-brand-accent dark:hover:text-slate-900 transition-all duration-300 ${isRTL ? 'flex-row-reverse' : ''}`}
          aria-label={t('sponsors.title')}
        >
          {t('sponsors.learnMore')}
          <svg class={`w-5 h-5 ${isRTL ? 'rotate-180' : ''}`} fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </a>
      </div>
    )}
  </div>
</section>
